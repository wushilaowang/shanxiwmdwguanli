/* pages/home/home.wxss */
.container {
  height: 55vh;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
  text-align: center;
  align-content: space-around;
  margin-bottom: -30rpx;
}
.header {
  display: flex;
  margin: 20rpx 0 0 5%;
}
.header-left {
  flex: .1;
}

.user-info {
  flex: 1;
  margin: 20rpx 0 0 20rpx;
}
.header-text {
  display: block;
  font-size: 26rpx;
}
.head-image {
  width: 100rpx;
  height: 100rpx;
}
.bottom {
  position: fixed;
  bottom: 60rpx;
  font-size: 22rpx;
  transform: translate(-50%, 0);
  left: 50%;
  text-align: center;
}

.home-image {
  border: 1rpx solid green;
}
.home-image-image {
  width: 100%;
  height: 10vh;
}

.item {
  width: 40%;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  padding: 20rpx 0;
  background-color: rgba(211, 211, 211, 0.9);
}
.item-image {
  width: 100rpx;
  height: 100rpx;
}

.textcolor {
  color: rgb(0, 0, 0);
  font-weight: bold;
}