/* pages/login/login.wxss */
.user, .password{
  position: relative;
  margin-bottom: 20rpx;
  text-align: center;
}
.user image, .password image {
  vertical-align: bottom;
  width: 40rpx;
  height: 40rpx;
}
.user input, .password input {
  margin-left: 10rpx;
  display: inline-block;
  border-bottom: 2rpx solid #d3d3d3;
}
.login-image image {
  width: 200rpx;
  height: 200rpx;
}
.login-image {
  text-align: center;
  margin: 400rpx 0 60rpx 0;
}
.remember {
  text-align: center;
  margin-bottom: 16rpx;
}
.submit {
  border-radius: 30rpx;
  width: 120rpx;
  padding: 14rpx 24rpx;
  border: solid 2rpx #b3b3b3;
  background-color: white;
}